<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#CCBBAC">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<!--스크롤뷰 내 전체 리니어 레이아웃 Start : -->
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <!--자판기프로그램-->
    <TextView
        style="@style/title"
        android:text="자판기 프로그램"/>

    <!--음료주문부-->
    <LinearLayout
        android:id="@+id/layout_order"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <!--음료주문부 상단-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <ImageView
                style="@style/img_p"
                android:src="@drawable/img1"/>
            <TextView
                android:id="@+id/tv_p1_name"
                style="@style/manin_style"
                android:text="콜라"/>
            <TextView
                android:id="@+id/tv_p1_price"
                style="@style/manin_style"
                android:text="800원"/>
            <TextView
                android:id="@+id/tv_p1_qty"
                style="@style/manin_style"
                android:text="n개 남음"/>
            <Button
                android:id="@+id/btn_order_1"
                style="@style/btn_order"
                android:text="주문하기"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    style="@style/img_p"
                    android:src="@drawable/img2"/>
                <TextView
                    android:id="@+id/tv_p2_name"
                    style="@style/manin_style"
                    android:text="사이다"/>
                <TextView
                    android:id="@+id/tv_p2_price"
                    style="@style/manin_style"
                    android:text="800원"/>
                <TextView
                    android:id="@+id/tv_p2_qty"
                    style="@style/manin_style"
                    android:text="n개 남음"/>
                <Button
                    android:id="@+id/btn_order_2"
                    style="@style/btn_order"
                    android:text="주문하기"/>
            </LinearLayout>
        </LinearLayout>
        <!--음료주문부 하단-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    style="@style/img_p"
                    android:src="@drawable/img3"/>
                <TextView
                    android:id="@+id/tv_p3_name"
                    style="@style/manin_style"
                    android:text="환타"/>
                <TextView
                    android:id="@+id/tv_p3_price"
                    style="@style/manin_style"
                    android:text="800원"/>
                <TextView
                    android:id="@+id/tv_p3_qty"
                    style="@style/manin_style"
                    android:text="n개 남음"/>
                <Button
                    android:id="@+id/btn_order_3"
                    style="@style/btn_order"
                    android:text="주문하기"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    style="@style/img_p"
                    android:src="@drawable/img4"/>
                <TextView
                    android:id="@+id/tv_p4_name"
                    style="@style/manin_style"
                    android:text="비락식혜"/>
                <TextView
                    android:id="@+id/tv_p4_price"
                    style="@style/manin_style"
                    android:text="800원"/>
                <TextView
                    android:id="@+id/tv_p4_qty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/manin_style"
                    android:text="n개 남음"/>
                <Button
                    android:id="@+id/btn_order_4"
                    style="@style/btn_order"
                    android:text="주문하기"/>
            </LinearLayout>
        </LinearLayout>



    </LinearLayout>

    <!--금액입력부-->
    <LinearLayout
        android:id="@+id/layout_insert"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- 금액 입력-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="7">
            <EditText
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:hint="금액을 입력하세요"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#141220"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="잔액 : n원"/>
        </LinearLayout>
        <!-- 금액입력버튼-->
            <Button
                android:id="@+id/btn_insert"
                android:layout_weight="3"
                style="@style/btn_insert"
                android:text="금액입력"/>

    </LinearLayout>

    <!--잔돈반환-->
        <Button
            android:id="@+id/btn_return"
            style="@style/btn_return"
            android:text="잔돈 반환"/>
</LinearLayout>
</ScrollView>
</LinearLayout>
