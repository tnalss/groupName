<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="black">#FF000000</color>
    <color name="button">#5B9279</color>
    <color name="order_button">#958577</color>
    <color name="purple_200">#FFBB86FC</color>
    <color name="purple_500">#FF6200EE</color>
    <color name="purple_700">#FF3700B3</color>
    <color name="teal_200">#FF03DAC5</color>
    <color name="teal_700">#FF018786</color>
    <color name="white">#FFFFFFFF</color>
    <string name="app_name">VendingMachine</string>
    <style name="Theme.VendingMachine" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
    </style>
    <style name="btn_insert" parent="btn_order">
        <item name="android:text">금액입력</item>
        <item name="backgroundTint">@color/button</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="btn_order">
        <item name="android:text">주문하기</item>
        <item name="backgroundTint">@color/order_button</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">15dp</item>
    </style>
    <style name="btn_return" parent="btn_order">
        <item name="android:text">잔돈반환</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:backgroundTint">@color/button</item>
        <item name="android:layout_marginTop">30dp</item>
    </style>
    <style name="img_p">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_gravity">center</item>

    </style>
    <style name="manin_style">
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">#2E2E2E</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>
    <style name="title" parent="manin_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">20dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">#5B9279</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>